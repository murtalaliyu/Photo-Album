<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SlideshowController">
   <children>
      <AnchorPane layoutX="137.0" layoutY="23.0" prefHeight="307.0" prefWidth="436.0">
         <children>
            <ImageView fx:id="thumbnail" fitHeight="307.0" fitWidth="420.0" layoutX="13.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../default-thumbnail.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <ButtonBar fx:id="buttonBar" layoutX="256.0" layoutY="347.0" prefHeight="40.0" prefWidth="192.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#handlePrevious" text="Previous" />
            <Button mnemonicParsing="false" onAction="#handleNext" text="Next" />
        </buttons>
      </ButtonBar>
    <Button layoutX="39.0" layoutY="354.0" mnemonicParsing="false" onAction="#handleBackToPhotoList" text="Back to Photo List" />
      <Label fx:id="caption" layoutX="22.0" layoutY="128.0" prefHeight="23.0" prefWidth="97.0" text="Caption" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="date" layoutX="19.0" layoutY="165.0" prefHeight="23.0" prefWidth="116.0" text="Date Added" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="tags" layoutX="19.0" layoutY="200.0" prefHeight="23.0" prefWidth="103.0" text="Tags">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
